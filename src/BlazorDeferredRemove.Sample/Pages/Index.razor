@page "/"

    <div class="">
        <h1>Hello, world!</h1>
        Welcome to your new app.
        <button @onclick="()=>Done()">Click here to start transition</button>
    </div>

<RemoveOnCssAnimationEnd>
    <div class='box @GetClassName()'>
        <div class="cube">
            <div class="side  front">1</div> <!-- dice top -->
            <div class="side   back">6</div> <!-- dice back -->
            <div class="side  right">5</div> <!-- dice right -->
            <div class="side   left">2</div> <!-- dice left -->
            <div class="side    top">4</div> <!-- dice top -->
            <div class="side bottom">3</div> <!-- dice bottom -->
        </div>
    </div>
</RemoveOnCssAnimationEnd>

@code{

    [Parameter]
    public bool StartTransition { get; set; } = false;

    public void Done()
    {
        StartTransition = true;
    }

    public string GetClassName()
    {
        return StartTransition ? "fadeout" : "";
    }

    protected override void OnInitialized()
    {
        StartTransition = true;
        base.OnInitialized();
    }
}
